@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Change Password";
}

<div class="container my-5">
    <div class="card p-4" style="background-color: #F1EFEC; border-radius: 12px; box-shadow: 0 0 15px rgba(0,0,0,0.05);">
        <h3 style="font-family: Funnel Display; color: #123458;">Change Password</h3>
        <hr />

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" style="font-family: Funnel Display;">@ViewBag.ErrorMessage</div>
        }
        else if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success" style="font-family: Funnel Display;">@ViewBag.SuccessMessage</div>
        }

        <form method="post">
            <div class="mb-3">
                <label style="font-family: Funnel Display; color: #123458;">Current Password</label>
                <input type="password" name="oldPassword" class="form-control" required />
            </div>
            <div class="mb-3">
                <label style="font-family: Funnel Display; color: #123458;">New Password</label>
                <input type="password" name="newPassword" class="form-control" required />
            </div>
            <div class="mb-3">
                <label style="font-family: Funnel Display; color: #123458;">Confirm New Password</label>
                <input type="password" name="confirmPassword" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary" style="background-color: #123458; border-color: #123458; font-family: Funnel Display;">Update Password</button>
        </form>
    </div>
</div>
