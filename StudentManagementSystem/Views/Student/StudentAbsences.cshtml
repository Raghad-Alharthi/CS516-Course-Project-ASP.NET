@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Student Absences";
}

<h3>Absences for @ViewBag.ClassName</h3>

@if (ViewBag.Absences != null && ViewBag.Absences.Count > 0)
{
    <table class="table table-bordered mt-3">
        <thead class="table-primary">
            <tr>
                <th>Lecture Date</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var absence in ViewBag.Absences)
            {
                <tr>
                    <td>@absence.LectureDateTime.ToString("yyyy-MM-dd")</td>
                    <td>@absence.LectureDateTime.ToString("hh:mm tt")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-success">No absences recorded for this class.</p>
}
