@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Schedule Lectures";
}

<div class="container my-5">
    <!-- Page Title -->
    <h3 style="font-family: Funnel Display; color: #123458; font-weight: 800;">Schedule Lectures for the Semester</h3>

    <!-- Schedule Form -->
    <div class="card mb-4" style="border-radius: 12px; padding: 20px; box-shadow: 0 0 15px rgba(0, 0, 0, 0.05); background-color: #F1EFEC;">
        <form asp-action="GenerateSemesterSchedule" method="post">
            <div class="mb-3">
                <label class="form-label" style="font-family: Funnel Display; color: #123458;">Select Class</label>
                <select name="ClassID" class="form-control" style="font-family: Funnel Display;" required>
                    @foreach (var classItem in ViewBag.Classes)
                    {
                        <option value="@classItem.ClassID">@classItem.ClassName</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label" style="font-family: Funnel Display; color: #123458;">Select Day of the Week</label>
                <select name="selectedDay" class="form-control" style="font-family: Funnel Display;" required>
                    <option value="Sunday">Sunday</option>
                    <option value="Monday">Monday</option>
                    <option value="Tuesday">Tuesday</option>
                    <option value="Wednesday">Wednesday</option>
                    <option value="Thursday">Thursday</option>
                    <option value="Friday">Friday</option>
                    <option value="Saturday">Saturday</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label" style="font-family: Funnel Display; color: #123458;">Select Time</label>
                <input type="time" name="selectedTime" class="form-control" style="font-family: Funnel Display;" required>
            </div>

            <button type="submit" class="btn btn-primary w-100" style="font-family: Funnel Display; background-color: #123458; border-color: #123458;">Generate Semester Schedule</button>
        </form>
    </div>
</div>
